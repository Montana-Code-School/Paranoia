	<div class="container-fluid row" id="gameMaker">
		<form action="/api/gameRoutes" class="gameFields" method="post" id="gameForm" role="form">
			<legend>Create Your Game</legend>

			<div class="input-group col-xs-offset-1 col-xs-10">
				<span class="input-group-addon" id="basic-addon1">Name Your Game</span>
				<input type="text" class="form-control" name="gameName" placeholder="">
			</div>
		
			<div class="input-group col-xs-offset-1 col-xs-10">
				<span class="input-group-addon" id="basic-addon1">Your Handle</span>
				<input type="text" class="form-control" name="moderator" placeholder="">
			</div>
			<div class="input-group col-xs-offset-1 col-xs-10">
				<span class="input-group-addon" id="basic-addon1">Start Day</span>
				<input type="text" class="form-control" name="startTime" placeholder="All games begin at midnight">
			</div>
			<div class="input-group col-xs-offset-1 col-xs-10">
				<span class="input-group-addon" id="basic-addon1">Location</span>
				<input type="text" class="form-control" name="location" placeholder="Where are you playing?">
			</div>
			
			<button type="submit" class="btn btn-success btn-lg" id="gameSubmit">Submit</button>
		</form>
	</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.js"></script>	
